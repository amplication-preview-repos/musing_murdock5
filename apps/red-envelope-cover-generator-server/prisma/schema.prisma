datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model History {
  createdAt          DateTime           @default(now())
  id                 String             @id @default(cuid())
  redEnvelopeCover   RedEnvelopeCover?  @relation(fields: [redEnvelopeCoverId], references: [id])
  redEnvelopeCoverId String?
  status             EnumHistoryStatus?
  timeStamp          DateTime?
  updatedAt          DateTime           @updatedAt
  user               User?              @relation(fields: [userId], references: [id])
  userId             String?
}

model Settings {
  createdAt DateTime @default(now())
  font      Json?
  id        String   @id @default(cuid())
  style     Json?
  updatedAt DateTime @updatedAt
}

model RedEnvelopeCover {
  createdAt DateTime  @default(now())
  histories History[]
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  histories History[]
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

enum EnumHistoryStatus {
  Option1
}
